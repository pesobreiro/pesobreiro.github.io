<%@LANGUAGE="JAVASCRIPT" CODEPAGE="1252"%><!--#include file="../../../Connections/Esdrm.asp" --><%var prof = "";prof = Session("Prof");var MM_editAction = Request.ServerVariables("SCRIPT_NAME");if (Request.QueryString) {  MM_editAction += "?" + Request.QueryString;}%><%var rstDisciplina = Server.CreateObject("ADODB.Recordset");rstDisciplina.ActiveConnection = MM_Esdrm_STRING;rstDisciplina.Source = "SELECT *  FROM dbo.TabDisciplina  ORDER BY TabDis_Descricao ASC";rstDisciplina.CursorType = 0;rstDisciplina.CursorLocation = 2;rstDisciplina.LockType = 1;rstDisciplina.Open();var rstDisciplina_numRows = 0;%><%var Repeat1__numRows = -1;var Repeat1__index = 0;rstDisciplina_numRows += Repeat1__numRows;%><html><head><title>Untitled Document</title><meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1"><link href="../../../CSS/css.css" rel="stylesheet" type="text/css"><script language="JavaScript" type="text/JavaScript"><!--function MM_goToURL() { //v3.0  var i, args=MM_goToURL.arguments; document.MM_returnValue = false;  for (i=0; i<(args.length-1); i+=2) eval(args[i]+".location='"+args[i+1]+"'");}//--></script></head><body background="../../../Fundos/exptextb.jpg" ><div align="center"><font size="5"><strong>Inserir ou Apagar Disciplinas</strong></font><br>  <br>  Selecciona as disciplinas que lecciona<br>  <br></div><form name="form1" method="post" action="<%=MM_editAction%>"><table width="75%" border="1" align="center" bgcolor="#CCCC99">  <tr>     <td width="13%">&nbsp;</td>    <td colspan="3">Disciplinas</td>  </tr>    <% while ((Repeat1__numRows-- != 0) && (!rstDisciplina.EOF)) {   			var disc = rstDisciplina.Fields.Item("IdDisciplina").Value;			conn = Server.CreateObject("ADODB.Connection");			conn.Open("dsn=Esdrm;uid=SiteEsdrm;pwd=SiteEsdrm");			SqlProfDisc = "SELECT * FROM Prof_Disc WHERE (convert(char(4),IdDisciplina) = '" + disc + "') AND (convert(char(4),IdProfessor) = '" + prof + "') ORDER BY IdProfessor ASC, IdDisciplina";			rstProfDisc = conn.Execute(SqlProfDisc);	%>  <tr>     <td width="13%"> <div align="center">           <input <%=(!rstProfDisc.EOF?'checked':'')%> disabled type='checkbox' name='checkbox' value='checkbox'>	  </div></td>    <td width="76%"><%=(rstDisciplina.Fields.Item("TabDis_Descricao").Value)%></td>    <td width="5%"><div align="center">         <% 		if (!rstProfDisc.EOF) {			mostraIns = "disabled";			mostraApa = "";			ins = "botao_alterar";			apa = "botao_actualizar";		}		else 		{			mostraIns = "";			mostraApa = "disabled";			ins = "botao_actualizar";			apa = "botao_alterar";		}		%>        <input name='Button' type='submit' <%=mostraIns%> class='<%=ins%>' value='Inserir' onClick="MM_goToURL('parent','GravaDisc.asp?<%=disc%>,<%=prof%>');return document.MM_returnValue">		  <input name="Inserir" type="hidden" value="<%=rstDisciplina.Fields.Item('IdDisciplina').Value%>">      </div></td>    <td width="5%">		<input name='Button' type='button' <%=mostraApa%> class='<%=apa%>' value='Apagar' onClick="MM_goToURL('parent','ApagaDisc.asp?<%=disc%>');return document.MM_returnValue" ></td>		<input type="hidden" name="Apagar" value="<%=rstDisciplina.Fields.Item('IdDisciplina').Value%>">  </tr>  <%  Repeat1__index++;  rstDisciplina.MoveNext();}conn.Close();%></table>  <div align="center"> <br>  <input name="Button" type="button" class="botao_actualizar" onClick="MM_goToURL('parent','Alterar.asp?<%=prof%>');return document.MM_returnValue"" value="P&aacute;gina Anterior"></div></form></body></html><%rstDisciplina.Close();%>